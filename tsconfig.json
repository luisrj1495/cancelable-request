{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib", // where to put the compiled JS files
    "target": "es2016", // which level of JS support to target
    "module": "CommonJS",
    "noImplicitAny": true,
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
